[Unit]
Description=FastAPI service
After=network.target

[Service]
User=ubuntu  # O el usuario de tu instancia
WorkingDirectory=/path/to/your/repo  # Reemplaza con el path donde clones el repo, e.g., /home/ubuntu/taller-so-aws
ExecStart=/path/to/venv/bin/uvicorn main:app --host 0.0.0.0 --port 80
Restart=always

[Install]
WantedBy=multi-user.target
